{% extends 'base.html.twig' %}

{% block title %}Membres{% endblock %}

{% block main %}
    <h1>Membres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.email }}</td>
                <td>
                    <a href="{{ path('app_member_show', {'id': member.id}) }}" class="btn btn-primary btn-sm">voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %} {# main #}
